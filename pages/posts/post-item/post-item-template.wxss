.post-container{
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom:40rpx;
  margin-left: 0rpx;
  background-color:#fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}

.post-author-image{
  width:60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date{
  font-size:22rpx; 
  margin-bottom:10px;
  margin-left: 20px;
  vertical-align: middle;
}

.post-title{
  font-size: 34rpx;
  font-weight: 600;
  margin-left: 10rpx;
  color:#333;
  margin-bottom: 20rpx;
}

.post-image{
  width:100%;
  height: 340rpx;
  margin:auto 0;
  margin-bottom:15px;
}
.post-content{
  color:#666;
  font-size:28rpx;
  margin-left: 10rpx;
  margin-bottom:20rpx;
  line-height: 20px;
  letter-spacing: 2rpx;
}
.post-like-container{
  font-size:13px;
  flex-direction: raw;
  line-height: 16rpx;
  margin-left:10rpx;
}
.post-like-image{
  width:16px;
  height: 16px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right:20px;
}

